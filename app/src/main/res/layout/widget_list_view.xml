<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_widget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_list_background"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_name"
        android:textSize="36sp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:background="@drawable/widget_name_background"/>

    <ImageView
        android:id="@+id/appwidget_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_name"
        android:src="@drawable/ic_bakingapplogo"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:textSize="24sp"
        android:alpha="0.2"
        android:visibility="visible"
        android:textStyle="bold|italic" />

    <ListView
        android:id="@+id/lv_widget_ingredient_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_name"
        android:divider="#22616161"
        android:dividerHeight="2dp"
        android:paddingStart="16dp"
        android:paddingEnd="16sp"/>



</RelativeLayout>